@model IEnumerable<SVPDomain.AsistenciaAl>

@{
    ViewBag.Title = "IndexAsistencia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index Asistencia</h2>

<p>
    @Html.ActionLink("Lista de Faltas", "Faltaron", null, new { @class = "btn btn-success" })
</p>
@using (Html.BeginForm("IndexAsistencia", "AsistenciaAl"))
{
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2">
                @Html.DropDownList("Grado", ViewData["Grado"] as List<SelectListItem>, null, new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("Seccion", ViewData["Seccion"] as List<SelectListItem>, null, new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                <div class='input-group date' id='datetimepicker3' style="width: 180px">
                    @Html.Editor("fechaInicio", new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-sm-2">
                <div class='input-group date' id='datetimepicker2' style="width: 180px">
                    @Html.Editor("fechaFin", new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-sm-2">
                @Html.TextBox("estado", null, null, new { @class = "form-control", @placeholder = "Nombre completo" })
            </div>
            <div class="col-sm-2">
                <input type="submit" value="Buscar" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayName("Fecha")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayName("Alumno")
        </th>
        <th>
            @Html.DisplayName("Grado")
        </th>
        <th>
            @Html.DisplayName("Sección")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Grado.NombreGrado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Seccion.NombreSeccion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
