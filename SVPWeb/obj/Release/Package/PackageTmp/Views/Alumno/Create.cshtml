@model SVPDomain.Alumno

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="clearfix" style="margin-bottom: 1px;"></div>
<div class="panel-group">
    <ol class="breadcrumb alert-link" style="background-color:rgb(254, 254, 254);border-bottom: 1px solid black;">
        @*border-top-style: dotted; border-right-style: solid; border-bottom-style: dotted; border-left-style: solid;*@
        <li class="active">
            <a href="/Home/Index" style="color:black"> <span class="glyphicon glyphicon-home"></span> Menú Principal</a>
        </li>
        <li>
            <a href="/Alumno/Index" style="color:black"><span class="fa fa-user"></span> Alumno</a>
        </li>
        <li style="color:dimgray">
            </i><span class="glyphicon glyphicon-plus"></span> Registrar Alumno
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info-circle"></i>  <strong>Nota!</strong> Asegúrese que la edad se complete!
        </div>
    </div>
</div>
@using (Html.BeginForm("Create", "Alumno", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top: 10px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-default">
                    <div class="panel" style="background-color: rgba(116, 237, 80, 0.79);text-align:center">
                        <h4>Registrar Alumno</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="form-group col-md-5 col-md-offset-1 col-sm-6 col-xs-12">
                                <label class="control-label">DNI:</label>
                                <div>
                                    @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese DNI...", @maxlength = "8" } })
                                    @Html.ValidationMessageFor(model => model.Dni, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Nombres:</label>
                                <div>
                                    @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nombres..." } })
                                    @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Apellido Paterno:</label>
                                <div>
                                    @Html.EditorFor(model => model.ApePat, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellido Paterno..." } })
                                    @Html.ValidationMessageFor(model => model.ApePat, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Apellido Materno:</label>
                                <div>
                                    @Html.EditorFor(model => model.ApeMat, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellido Materno..." } })
                                    @Html.ValidationMessageFor(model => model.ApeMat, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Sexo:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Sexo, new SelectList(new List<Object>{
                        new {value = "", text = "Seleccionar"},
                        new {value = "M", text = "Masculino"},
                        new {value = "F", text = "Femenino"}}, "value", "text", ""), htmlAttributes: new { @class = "form-control" })

                                    @Html.ValidationMessage("Sexo", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Fecha Nacimiento:</label>
                                <div class="input-group date">
                                    <div>
                                        <div class='input-group date' id='datetimepicker3' style="width: 340px">
                                            @Html.EditorFor(model => model.FechaNac, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Fecha de Nacimiento..." } })
                                            @Html.ValidationMessageFor(model => model.FechaNac, "", new { @class = "text-danger" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <label class="control-label">Edad:</label>
                                <div>
                                    <input type="text" name="Edad" id="edadAlumno" class="form-control" readonly="true" />
                                </div>
                                <div class="clearfix" style="margin-bottom: 15px;"></div>
                                <label class="control-label">DATOS DE LA MADRE</label>
                                <div style="border-style: dashed; border-width: 2px;">
                                    <label class="control-label">DNI:</label>
                                    <div>
                                        @Html.EditorFor(model => model.DNI_Mama, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese DNI de la Madre...", @maxlength = "8" } })
                                        @Html.ValidationMessageFor(model => model.DNI_Mama, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="control-label">Nombres:</label>
                                    <div>
                                        @Html.EditorFor(model => model.Nombres_Mama, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nombres de la Madre..."} })
                                        @Html.ValidationMessageFor(model => model.Nombres_Mama, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="control-label">Apellidos:</label>
                                    <div>
                                        @Html.EditorFor(model => model.Apellidos_Mama, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellidos de la Madre..."} })
                                        @Html.ValidationMessageFor(model => model.Apellidos_Mama, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-5 col-sm-6 col-xs-10">
                                <label class="control-label">Dirección:</label>
                                <div>
                                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Dirección..."} })
                                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Teléfono:</label>
                                <div>
                                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Teléfono/Celular...", @maxlength = "9" } })
                                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Correo:</label>
                                <div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Correo..." } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Estado:</label>
                                <div>
                                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Grado:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdGrado, new SelectList(ViewBag.IdGrado, "Id", "NombreGrado"), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdGrado, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Sección:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdSeccion, new SelectList(ViewBag.IdSección, "Id", "NombreSeccion"), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdSeccion, "", new { @class = "text-danger" })
                                </div>
                                <div class="clearfix" style="margin-bottom: 10px;"></div>
                                <label class="control-label">Foto:</label>
                                <div>
                                    <span class="btn btn-default btn-file">
                                        @Html.TextBoxFor(modelo => modelo.FotoFile, new { type = "file" })
                                    </span>
                                </div>
                                <div class="clearfix" style="margin-bottom: 20px;"></div>
                                <label class="control-label">DATOS DEL PADRE</label>
                                <div style="border-style: dashed; border-width: 2px;">
                                    <label class="control-label">DNI:</label>
                                    <div>
                                        @Html.EditorFor(model => model.DNI_Papa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese DNI del Padre...", @maxlength = "8" } })
                                        @Html.ValidationMessageFor(model => model.DNI_Papa, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="control-label">Nombres:</label>
                                    <div>
                                        @Html.EditorFor(model => model.Nombres_Papa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nombres del Padre..." } })
                                        @Html.ValidationMessageFor(model => model.Nombres_Papa, "", new { @class = "text-danger" })
                                    </div>
                                    <label class="control-label">ApellidoS:</label>
                                    <div>
                                        @Html.EditorFor(model => model.Apellidos_Papa, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellidos del Padre..."} })
                                        @Html.ValidationMessageFor(model => model.Apellidos_Papa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="container col-md-12 col-sm-6 col-xs-12">
                                <div class="col-md-2 col-md-offset-4 col-sm-4 col-xs-12">
                                    <a href="~/Alumno/index" class="btn btn-warning">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Volver
                                    </a>
                                </div>
                                <div class="col-md-1 col-sm-4 col-xs-12">
                                    <button type="submit" class="btn btn-success" aria-hidden="true">
                                        <span class="glyphicon glyphicon-ok"></span> Crear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
