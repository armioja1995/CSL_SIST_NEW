@model SVPDomain.Apoderado

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="clearfix" style="margin-bottom: 1px;"></div>
<div class="panel-group">
    <ol class="breadcrumb alert-link" style="background-color:rgb(254, 254, 254);border-bottom: 1px solid black;">
        @*border-top-style: dotted; border-right-style: solid; border-bottom-style: dotted; border-left-style: solid;*@
        <li class="active">
            <a href="/Home/Index" style="color:black"> <span class="glyphicon glyphicon-home"></span> Menú Principal</a>
        </li>
        <li>
            <a href="/Apoderado/Index" style="color:black"><span class="glyphicon glyphicon-user"></span> Apoderados</a>
        </li>
        <li style="color:dimgray">
            </i><span class="glyphicon glyphicon-pencil"></span> Editar Apoderado
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info-circle"></i>  <strong>Nota!</strong> Asegúrese que la edad se complete!
        </div>
    </div>
</div>
@using (Html.BeginForm("Edit", "Apoderado", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top: 10px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-default">
                    <div class="panel" style="background-color: rgba(116, 237, 80, 0.79);text-align:center">
                        <h4>Editar Apoderado</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="form-group col-md-5 col-md-offset-1">
                                <label class="control-label">DNI:</label>
                                <div>
                                    @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese DNI...", @maxlength = "8" } })
                                    @Html.ValidationMessageFor(model => model.Dni, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Nombres:</label>
                                <div>
                                    @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nombres..." } })
                                    @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Apellido Paterno:</label>
                                <div>
                                    @Html.EditorFor(model => model.ApePat, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellido Paterno..." } })
                                    @Html.ValidationMessageFor(model => model.ApePat, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Apellido Materno:</label>
                                <div>
                                    @Html.EditorFor(model => model.ApeMat, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Apellido Materno..." } })
                                    @Html.ValidationMessageFor(model => model.ApeMat, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Sexo:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Sexo, new SelectList(new List<Object>
                {
                    new {value = "", text = "Seleccionar"},
                    new {value = "M", text = "Masculino"},
                    new {value = "F", text = "Femenino"}
                }, "value", "text", ""), htmlAttributes: new { @class = "form-control" })

                                    @Html.ValidationMessage("Sexo", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Fecha Nacimiento:</label>
                                <div class="input-group date">
                                    <div>
                                        <div class='input-group date' id='datetimepicker3' style="width: 340px">
                                            @Html.EditorFor(model => model.FechaNac, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Fecha de Nacimiento..." } })
                                            @Html.ValidationMessageFor(model => model.FechaNac, "", new { @class = "text-danger" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-5">
                                <label class="control-label">Edad:</label>
                                <div>
                                    <input type="text" name="Edad" id="edadAlumno" class="form-control" value="@Model.Edad" readonly="true" />
                                    @Html.ValidationMessage("Edad", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Parentesco:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Parentesco, new SelectList(new List<Object>
                {
                    new {value = "", text = "[Seleccionar...]"},
                    new {value = "Mamá", text = "Mamá"},
                    new {value = "Papá", text = "Papá"},
                    new {value = "Hermano Mayor", text = "Hermano Mayor"},
                    new {value = "Hermana Mayor", text = "Hermana Mayor"},
                    new {value = "Tío", text = "Tío"},
                    new {value = "Tía", text = "Tía"},
                    new {value = "Abuelo", text = "Abuelo"},
                    new {value = "Abuela", text = "Abuela"}
                }, "value", "text", ""), htmlAttributes: new { @class = "form-control" })

                                    @Html.ValidationMessage("Parentesco", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Dirección:</label>
                                <div>
                                    @Html.EditorFor(model => model.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Dirección..." } })
                                    @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Teléfono:</label>
                                <div>
                                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Teléfono/Celular...", @maxlength = "9" } })
                                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Correo:</label>
                                <div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Correo..." } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Alumno:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdAlumno, new SelectList(ViewBag.alumno, "Id", "NombreCompleto", Model.IdAlumno), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdAlumno, "", new { @class = "text-danger" })
                                </div>
                            </div>
                                <div class="container col-md-12">
                                    <div class="col-md-2 col-md-offset-4">
                                        <a href="~/Apoderado/index" class="btn btn-warning">
                                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Volver
                                        </a>
                                    </div>
                                    <div class="col-md-1">
                                        <button type="submit" class="btn btn-success" aria-hidden="true">
                                            <span class="glyphicon glyphicon-ok"></span> Actualizar
                                        </button>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
