@model SVPDomain.Apoderado

@{
    Layout = null;
}
<script type="text/javascript">
    function genPDF() {
        html2canvas(document.getElementById("Imprimir"), {
            onrendered: function(canvas) {
                var img = canvas.toDataURL("image/pjeg");
                var doc = new jsPDF();
                doc.addImage(img, 'JPEG', -1, -1);
                doc.save('reporte.pdf');
            }
        });
    }
</script>
<div id="Imprimir">
    <div class="col-md-12 col-md-offset-0">
        <legend class="panel-footer">Información - @Model.Nombres,@Model.ApePat @Model.ApeMat - @Model.Dni </legend>
    </div>

    <div class="container panel-">
        <div class="row">
            <div class="col-md-6 col-md-offset-1">
                <form class="dl-horizontal col-md-offset-5">
                    <div class="col-md-4 col-md-offset-5">
                        @if (!string.IsNullOrEmpty(Model.Alumno.Foto))
                        {
                            <p>
                                <img src="@Url.Content(Model.Alumno.Foto)" alt="Image" width="110" height="100" class="img-circle" />
                            </p>
                        }
                    </div>
                    <br /><br /><br /><br /><br /><br />
                    <dt>
                        Alumno:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Alumno.NombreCompleto)
                    </dd>
                    <dt>
                        Sexo:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sexo)
                    </dd>

                    <dt>
                        Parentesco:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Parentesco)
                    </dd>

                    <dt>
                        Fecha de Nacimiento:
                    </dt>

                    <dd>
                        @Model.FechaNac.ToShortDateString()
                    </dd>

                    <dt>
                        Edad:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Edad)
                    </dd>

                    <dt>
                        Email:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        Dirección:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>

                    <dt>
                        Telefono:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                </form>
            </div>
        </div>
    </div>
    <br />
</div>
<div class="container">
    <div class="col-md-2 col-md-offset-4">
        <a href="~/Apoderado/index" class="btn btn-danger">
            Cerrar
        </a>
    </div>
    <div class="col-md-1">
        <a href="~/Apoderado/Edit/@Html.DisplayFor(model => model.Id)" class="btn btn-warning">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>Editar
        </a>
    </div>
</div>
<div class="col-md-6 col-md-offset-5">
    <a href="javascript:genPDF()" style="color: aqua">
        Descargar PDF
    </a>
</div>