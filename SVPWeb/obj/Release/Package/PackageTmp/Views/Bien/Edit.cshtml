@model SVPDomain.Bien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="clearfix" style="margin-bottom: 1px;"></div>
<div class="panel-group">
    <ol class="breadcrumb alert-link" style="background-color:rgb(254, 254, 254);border-bottom: 1px solid black;">
        @*border-top-style: dotted; border-right-style: solid; border-bottom-style: dotted; border-left-style: solid;*@
        <li class="active">
            <a href="/Home/Index" style="color:black"> <span class="glyphicon glyphicon-home"></span> Menú Principal</a>
        </li>
        <li>
            <a href="/Bien/Index" style="color:black"><span class="fa fa-shopping-cart"></span> Bienes</a>
        </li>
        <li style="color:dimgray">
            </i><span class="glyphicon glyphicon-pencil"></span> Editar Bien
        </li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info-circle"></i>  <strong>Nota!</strong> Los campos en blanco NO PERTENECEN AL BIEN...
        </div>
    </div>
</div>
@using (Html.BeginForm("Edit", "Bien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="container" style="margin-top: 10px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-default">
                    <div class="panel" style="background-color: rgba(116, 237, 80, 0.79);text-align:center">
                        <h4>Editar Bien</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.IdBien)
                            <div class="form-group col-md-5 col-md-offset-1 col-sm-5 col-xs-12">
                                <label class="control-label">Tipo de Producto:</label>
                                <div>
                                    @Html.EditorFor(model => model.TipodeProducto, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                </div>
                                <label class="control-label">Grupo:</label>
                                <div>
                                    @Html.EditorFor(model => model.Grupo, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                </div>

                                <label class="control-label">Nombre:</label>
                                <div>
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Fecha de Ingreso:</label>
                                <div class="input-group date">
                                    <div>
                                        <div class='input-group date' id='datetimepicker3' style="width: 340PX">
                                            @Html.EditorFor(model => model.FechadeIngreso, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FechadeIngreso, "", new { @class = "text-danger" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <label class="control-label">Marca:</label>
                                <div>
                                    @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Modelo:</label>
                                <div>
                                    @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <label class="control-label">Serie:</label>
                                <div>
                                    @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <label class="control-label">Color:</label>
                                <div>
                                    @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <label class="control-label">Dimensiones:</label>
                                <div>
                                    @Html.EditorFor(model => model.Dimensiones, new { htmlAttributes = new { @class = "form-control" } })
                                </div>

                                <label class="control-label">Estado:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Estado, new SelectList(new List<Object>{
                                            new {value = "", text = "Seleccionar..."},
                                            new {value = "Nuevo", text = "Nuevo"},
                                            new {value = "Bueno", text = "Bueno"},
                                            new {value = "Regular", text = "Regular"},
                                            new {value = "Malo", text = "Malo"}}, "value", "text", ""), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("Estado", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Tipo de Obtención:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Tipo, new SelectList(new List<Object>{
                                            new {value = "", text = "Seleccionar..."},
                                            new {value = "Compra", text = "Compra"},
                                            new {value = "Donación", text = "Donación"},
                                            new {value = "Premio", text = "Premio"}}, "value", "text", ""), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("Tipo", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Documento:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.Tipo_Documento, new SelectList(new List<Object>{
                                            new {value = "", text = "Seleccionar..."},
                                            new {value = "Acta", text = "Acta"},
                                            new {value = "Boleta", text = "Boleta"},
                                            new {value = "Factura", text = "Factura"},
                                            new {value = "Oficio", text = "Oficio"}}, "value", "text", ""), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("Tipo", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">N° de Documento:</label>
                                <div>
                                    @Html.EditorFor(model => model.N_Documento, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.N_Documento, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Unidad de Medida:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.UnidadMedida, new SelectList(new List<Object>{
                                            new {value = "", text = "Seleccionar..."},
                                            new {value = "Unidad", text = "Unidad"},
                                            new {value = "Millar", text = "Millar"},
                                            new {value = "Ciento", text = "Ciento"},
                                            new { value = "Kilos", text = "Kilos" },
                                            new { value = "Litros", text = "Litros" } }, "value", "text", ""), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessage("Tipo", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-md-5 col-sm-5 col-xs-12">

                                <label class="control-label">Cantidad:</label>
                                <div>
                                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Costo:</label>
                                <div>
                                    @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Perecible:</label>
                                <div>
                                    @Html.EditorFor(model => model.Perecible, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Perecible, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Fecha Vencimiento</label>
                                <div class="input-group date">
                                    <div>
                                        <div class='input-group date' id='datetimepicker2' style="width: 340PX">
                                            @Html.EditorFor(model => model.FechaVencimiento, new { htmlAttributes = new { @class = "form-control" } })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <label class="control-label">Fungible:</label>
                                <div>
                                    @Html.EditorFor(model => model.Fungible, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Fungible, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Ambiente:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdAmbiente, new SelectList(ViewBag.ambiente, "IdAmbiente", "Nombre", Model.IdAmbiente), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdAmbiente, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Sede:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdSede, new SelectList(ViewBag.sede, "IdSede", "NombreSede", Model.IdSede), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdSede, "", new { @class = "text-danger" })
                                </div>

                                <label class="control-label">Proveedor:</label>
                                <div>
                                    @Html.DropDownListFor(model => model.IdProveedor, new SelectList(ViewBag.proveedor, "IdProveedor", "Nombre", Model.IdProveedor), "[Selecionar...]", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdProveedor, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">De Baja:</label>
                                <div>
                                    @Html.EditorFor(model => model.DeBaja, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DeBaja, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Observaciones:</label>
                                <div>
                                    @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control", @rows = 5, @cols = 220 })
                                    @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                </div>
                                <label class="control-label">Foto:</label>
                                <div>
                                    <span class="btn btn-default btn-file">
                                        @Html.TextBoxFor(modelo => modelo.FotoFile, new { type = "file" })
                                        @Html.HiddenFor(model => model.Foto);
                                    </span>
                                </div>
                            </div>

                        </div>
                        <div class="container col-md-12 col-sm-6 col-xs-12">
                            <div class="col-md-2 col-md-offset-4 col-sm-4 col-xs-12">
                                <a href="~/Bien/index" class="btn btn-warning">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Volver
                                </a>
                            </div>
                            <div class="col-md-1 col-sm-4 col-xs-12">
                                <button type="submit" class="btn btn-success" aria-hidden="true">
                                    <span class="glyphicon glyphicon-ok"></span> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
