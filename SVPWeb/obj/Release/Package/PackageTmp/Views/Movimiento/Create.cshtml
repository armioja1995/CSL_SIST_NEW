
<div class="clearfix" style="margin-bottom: 1px;"></div>
<div class="panel-group">
    <ol class="breadcrumb alert-link" style="background-color:rgb(254, 254, 254);border-bottom: 1px solid black;">
        @*border-top-style: dotted; border-right-style: solid; border-bottom-style: dotted; border-left-style: solid;*@
        <li class="active">
            <a href="/Home/Index" style="color:black"> <span class="glyphicon glyphicon-home"></span> Menú Principal</a>
        </li>
        <li>
            <a href="/Bien/Index" style="color:black"><span class="fa fa-shopping-cart"></span> Bienes</a>
        </li>
        <li>
            <a href="/Movimiento/Index" style="color:black"><span class="fa fa-level-up"></span> Movimiento</a>
        </li>

        <li style="color:dimgray">
            </i><span class="glyphicon glyphicon-plus"></span> Registrar Movimiento
        </li>
    </ol>
</div>
@using (Html.BeginForm("Create", "Movimiento", FormMethod.Post))
{
    <div class="container" style="margin-top: 10px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel" style="background-color: rgba(116, 237, 80, 0.79);text-align:center">
                        <h4>Registrar Movimiento</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="form-group col-md-10 col-md-offset-3 col-sm-6 col-xs-12">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Fecha :</label>
                                    <div class="input-group date">
                                        <div class="col-md-5">
                                            <div class='input-group date' id='datetimepicker2' style="width: 280px">
                                                <input type="date" name="FechaMovimiento" class="form-control" />
                                                @Html.ValidationMessage("FechaMovimiento", new { @class = "text-danger" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Movimiento:</label>
                                    <div class="col-md-5">
                                        <select class="form-control" name="Tipo">
                                            <option value="">[Seleccionar...]</option>
                                            <option value="Entrada">Entrada</option>
                                            <option value="Salida">Salida</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Nombre :</label>
                                    <div class="col-md-5">
                                        <input type="text" name="Nombre" class="form-control" value="@Model.Nombre" readonly="true" />
                                        <input type="hidden" name="IdBien" class="form-control" value="@Model.IdBien" />
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Stock :</label>
                                    <div class="col-md-5">
                                        <input type="text" name="Cantidad" class="form-control" value="@Model.Cantidad" readonly="true" />
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Estado del Producto:</label>
                                    <div class="col-md-5">
                                        <select class="form-control" name="EstadoEntrega">
                                            <option value="">[Seleccionar...]</option>
                                            <option value="Nuevo">Nuevo</option>
                                            <option value="Bueno">Bueno</option>
                                            <option value="Regular">Regular</option>
                                            <option value="Malo">Malo</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Motivo :</label>
                                    <div class="col-md-5">
                                        @Html.TextArea("Descripcion", new { @class = "form-control", @rows = 5, @cols = 220 })
                                        @Html.ValidationMessage("Descripcion", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Cantidad :</label>
                                    <div class="col-md-5">

                                        <input type="text" name="Cantidad" class="form-control" value="@Model.Cantidad"/>
                                        @Html.ValidationMessage("Cantidad", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Trabajador :</label>
                                    <div class="col-md-5">
                                        @Html.DropDownList("IdTrabajador", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Sede :</label>
                                    <div class="col-md-5">
                                        @Html.DropDownList("IdSede", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="clearfix" style="margin-bottom: 5px;"></div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Ambiente :</label>
                                    <div class="col-md-5">
                                        @Html.DropDownList("IdAmbiente", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="container col-md-12 col-sm-6 col-xs-12">
                                <div class="col-md-2 col-md-offset-4 col-sm-4 col-xs-12">
                                    <a href="~/Bien/index" class="btn btn-warning">
                                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Volver
                                    </a>
                                </div>
                                <div class="col-md-1 col-sm-4 col-xs-12">
                                    <button type="submit" class="btn btn-success" aria-hidden="true">
                                        <span class="glyphicon glyphicon-ok"></span> Crear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function ProductoChange() {
        document.getElementById("btnProductoChangeId").click();
    }
</script>

