@model SVPDomain.Ambiente

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="clearfix" style="margin-bottom: 1px;"></div>
<div class="panel-group">
    <ol class="breadcrumb alert-link" style="background-color:rgb(254, 254, 254);border-bottom: 1px solid black;">
        @*border-top-style: dotted; border-right-style: solid; border-bottom-style: dotted; border-left-style: solid;*@
        <li class="active">
            <a href="/Home/Index" style="color:black"> <span class="glyphicon glyphicon-home"></span> Menú Principal</a>
        </li>
        <li>
            <a href="/Ambiente/Index" style="color:black"><span class="fa fa-windows"></span> Ambientes</a>
        </li>
        <li style="color:dimgray">
            </i><span class="glyphicon glyphicon-pencil"></span> Editar Ambiente
        </li>
    </ol>
</div>
@using (Html.BeginForm("Edit", "Ambiente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.IdAmbiente)
    <div class="container" style="margin-top: 10px;">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-default">
                    <div class="panel" style="background-color: rgba(116, 237, 80, 0.79);text-align:center">
                        <h4>Editar Ambiente</h4>
                    </div>
                    <div class="panel-body">
                        <div class="form-group col-md-12 col-md-offset-2">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Nombre :</label>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingrese Nombre de Ambiente...", @required = "required" } })
                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix" style="margin-bottom: 10px;"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descripción :</label>
                                <div class="col-lg-5 col-md-5">
                                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = 5, @cols = 220, @placeholder = "Ingrese Descripción del Ambiente...", @required = "required", @maxlength = "11" })
                                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="clearfix" style="margin-bottom: 10px;"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Foto:</label>
                                <div class="col-md-5">
                                    <span class="btn btn-default btn-file">
                                        @Html.TextBoxFor(modelo => modelo.FotoFile, new { type = "file" })
                                        @Html.HiddenFor(model => model.Foto);
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="container">
                            <div class="col-md-2 col-md-offset-4">
                                <a href="~/Ambiente/index" class="btn btn-warning">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Volver
                                </a>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-success" aria-hidden="true">
                                    <span class="glyphicon glyphicon-ok"></span> Actualizar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}