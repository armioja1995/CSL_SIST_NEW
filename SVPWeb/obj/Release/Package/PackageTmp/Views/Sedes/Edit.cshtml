    //    $("#tabla1").on("click", function (that, event) {
    //        console.log(location)
    //        $.get('/Sedes/Item2/'+)
    //            .done(function (respuesta) {
    //                $('#TBodyAmbientes').append(respuesta);
    //                position++;
    //            });
    //    });
    //})
    var contador = 0 ;
    function cargarData(id){
        if (contador == 0) {

            console.log(contador);
            $.get('/Sedes/Item2/?id='+id)
            .done(function (respuesta) {
                $('#TBodyAmbientes').append(respuesta);
            });
            contador = 1;
        }

    }



</script>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>