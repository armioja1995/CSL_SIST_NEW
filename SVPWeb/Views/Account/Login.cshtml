@using SVPWeb.Models
@model LoginViewModel
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <body style="background-color:rgba(219, 219, 219, 0.59)">
        @Html.AntiForgeryToken()
        <div class="login_wrapper">
            <div class="animate form login_form">

                <div class="modal-body modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="header" style="padding:30px 40px; background-color: rgba(2, 21, 113, 0.85);color:white !important;text-align: center;font-size: 20px;">
                            <h4 style="font-size: 20px;"><span class="glyphicon glyphicon-lock"></span> Iniciar Sesión</h4>
                            <img src="~/Insignia.png" width="100" height="auto" />
                        </div>
                        <div class="modal-body" style="padding:40px 40px;">
                            <form role="form">
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10">
                                        <label for="usrname"><span class="glyphicon glyphicon-user"></span> Usuario</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Ingrese Email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-10">
                                        <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Contraseña</label>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Ingrese password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="checkbox col-md-offset-2">
                                    <label>@Html.CheckBoxFor(m => m.RememberMe) Recordarme</label>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-off"></span> Iniciar Sesión</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <footer>
            <div style="text-align:center">
                <p>&copy; @DateTime.Now.Year - Desarrollado por <a hreft="https://www.facebook.com/arnoldmijail.odarjauregui">ARMIOJA-19</a> && <a hreft="https://www.facebook.com/daniel.olanopastor?fref=ts">DANNYSH</a> </p>
            </div>
            <div class="clearfix"></div>
        </footer>
    </body>

}
